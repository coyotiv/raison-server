{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/src/server.js",
    "dev": "tsx watch --clear-screen=false ./src/server.ts",
    "lint": "pretty-quick -w . && eslint . --fix",
    "lint-staged": "lint-staged",
    "typecheck": "tsc --noEmit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "pretty-quick --staged",
      "eslint --fix"
    ],
    "*.{json|css|md}": [
      "pretty-quick --staged"
    ]
  },
  "dependencies": {
    "better-auth": "^1.3.27",
    "cookie-parser": "~1.4.6",
    "cors": "^2.8.5",
    "debug": "~4.3.4",
    "dotenv": "^16.4.5",
    "echt": "^2.0.2",
    "express": "~4.18.3",
    "helmet": "^8.1.0",
    "http-errors": "~2.0.0",
    "mongoose": "^8.4.3",
    "mongoose-autopopulate": "^1.1.0",
    "morgan": "~1.10.0",
    "pug": "3.0.2",
    "socket.io": "^4.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.14.9",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^6.0.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "mongodb-memory-server": "^10.2.3",
    "prettier": "^3.3.2",
    "pretty-quick": "^4.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.0",
    "typescript": "^5.5.4"
  }
}
